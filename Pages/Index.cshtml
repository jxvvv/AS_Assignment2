@page
@model IndexModel
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Home page";
    var sessionUserId = HttpContextAccessor.HttpContext?.Session?.GetString("UserId");
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    @if (!string.IsNullOrEmpty(sessionUserId))
    {
        <p>Welcome back, User ID: <strong>@sessionUserId</strong></p>
        <a class="btn btn-primary" asp-page="/Logout">Logout</a>
    }
    else
    {
        <p>You are not logged in.</p>
        <a class="btn btn-primary" asp-page="/Login">Login</a>
        <a class="btn btn-secondary" asp-page="/Register">Register</a>
    }
</div>
