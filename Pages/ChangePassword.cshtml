@page
@model WebApplication1.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="OldPassword">Old Password</label>
        <input type="password" class="form-control" id="OldPassword" name="OldPassword" asp-for="CPasswordModel.OldPassword" />
        <span asp-validation-for="CPasswordModel.OldPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="NewPassword">New Password</label>
        <input type="password" class="form-control" id="NewPassword" name="NewPassword" asp-for="CPasswordModel.NewPassword" />
        <span asp-validation-for="CPasswordModel.NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ConfirmPassword">Confirm New Password</label>
        <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" asp-for="CPasswordModel.ConfirmPassword" />
        <span asp-validation-for="CPasswordModel.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Change Password</button>
</form>

